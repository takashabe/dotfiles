[user]
  email = i@takashabe.dev
  name = takashabe
[color]
  ui = true
[core]
  quotepath = false
  excludesfile = ~/.gitignore
[merge]
  tool = vimdiff
[diff]
  tool = vimdiff
[ghq]
  root = ~/dev/src
[include]
  path = ~/.gitconfig.credential
[pull]
  rebase = false
[credential "https://github.com"]
	helper =
	helper = !/opt/homebrew/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper =
	helper = !/opt/homebrew/bin/gh auth git-credential

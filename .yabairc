#!/usr/bin/env bash

yabai -m config layout bsp
yabai -m config window_placement second_child

yabai -m config top_padding    5
yabai -m config bottom_padding 5
yabai -m config left_padding   5
yabai -m config right_padding  5
yabai -m config window_gap     5

yabai -m config auto_balance off

yabai -m config window_shadow on
yabai -m config window_opacity off

yabai -m rule --add app="iTerm" space=1
yabai -m rule --add app="Firefox|Slack" space=2

yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add app="^Finder$" manage=off
yabai -m rule --add app="Toggl Track" manage=off
yabai -m rule --add app="zoom.us" manage=off
yabai -m rule --add app="Spotify" manage=off
yabai -m rule --add app="LINE" manage=off
yabai -m rule --add app="Preview" manage=off
yabai -m rule --add app="Keynote" manage=off
yabai -m rule --add app="Docker" manage=off
yabai -m rule --add app="draw.io" manage=off
yabai -m rule --add app="licecap" manage=off
